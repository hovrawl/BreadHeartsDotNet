<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BreadHeartsLauncher.Views.ConsoleView">
    <StackPanel Name="ConsoleContainer" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="3"
                Padding="10" Margin="10">
            <TextBlock Name="ConsoleTextBlock" Margin="5" ></TextBlock>
        </Border>
        
        <StackPanel Name="EngineControlPanel">
            <Button Name="StartEngineBtn" Click="StartEngineBtn_OnClick">Start</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
